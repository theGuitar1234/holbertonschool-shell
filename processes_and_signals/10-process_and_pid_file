#!/usr/bin/env bash
# Runs forever, prints a message every 2 seconds, writes its PID to /var/run/myscript.pid, and handles signals.

PIDFILE="/var/run/myscript.pid"

trap 'echo "I hate the kill command"' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT
trap 'rm -f "$PIDFILE"; exit 0' SIGQUIT

echo "$$" > "$PIDFILE" || exit 1

while true; do
  echo "To infinity and beyond"
  sleep 2
done
