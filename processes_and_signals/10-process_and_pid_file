#!/usr/bin/env bash
# Runs indefinitely, prints a message periodically, writes its PID to /var/run/myscript.pid, and handles SIGTERM/SIGINT/SIGQUIT.

PIDFILE="/var/run/myscript.pid"

cleanup() { rm -f "$PIDFILE"; }

term_handler() {
  echo "I hate the kill command"
  cleanup
  exit 0
}

int_handler() {
  echo "Y U no love me?!"
}

quit_handler() {
  cleanup
  exit 0
}

# Critical: survive when launcher shell exits (common in su/timeout harness)
trap '' SIGHUP

trap term_handler SIGTERM
trap int_handler  SIGINT
trap quit_handler SIGQUIT

# Create PID file early and deterministically
umask 0022
printf '%s\n' "$$" > "$PIDFILE" || exit 1

while true; do
  echo "To infinity and beyond"
  sleep 2
done
