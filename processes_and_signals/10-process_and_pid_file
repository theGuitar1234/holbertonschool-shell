#!/usr/bin/env bash
# Runs forever, prints a message every 2 seconds, writes its PID to /var/run/myscript.pid, and handles signals.

PIDFILE="/var/run/myscript.pid"

cleanup() {
  rm -f "$PIDFILE"
}

# If the environment sends SIGHUP when the launching shell exits, ignore it.
trap '' SIGHUP

# 요구사항: on SIGTERM/SIGINT print text, but keep running
trap 'echo "I hate the kill command"' SIGTERM
trap 'echo "Y U no love me?!"' SIGINT

# 요구사항: on SIGQUIT remove pidfile (and we should exit)
trap 'cleanup; exit 0' SIGQUIT

# Create PID file immediately
printf '%s\n' "$$" > "$PIDFILE" || exit 1

while true; do
  echo "To infinity and beyond"
  sleep 2
done
