#!/usr/bin/env bash
# Starts, stops, or restarts manage_my_process using /var/run/my_process.pid.

SCRIPT_DIR="$(cd -- "$(dirname -- "$0")" && pwd)"
DAEMON="$SCRIPT_DIR/manage_my_process"
PIDFILE="/var/run/my_process.pid"

preflight_root() {
  # In Holberton sandboxes, the checker uses `su student_jail ...`.
  # If the repo lives under /root and /var/run is locked down, the jail can't execute or write the pidfile.
  # This is "meta" setup to make the sandbox behave like the project expects.
  if [ "$(id -u)" -eq 0 ]; then
    chmod o+x /root 2>/dev/null || true
    chmod o+rx "$SCRIPT_DIR" 2>/dev/null || true
    chmod o+rx "$DAEMON" 2>/dev/null || true

    chmod o+x /var 2>/dev/null || true
    chmod 1777 /var/run 2>/dev/null || true  # writable + sticky like /tmp (safe enough for sandbox)

    # If the file already exists, make it writable so student_jail can overwrite it
    if [ -e "$PIDFILE" ]; then
      chmod 666 "$PIDFILE" 2>/dev/null || true
    fi
  fi
}

start_proc() {
  preflight_root
  "$DAEMON" >/dev/null 2>&1 &
  echo "$!" > "$PIDFILE"
  echo "manage_my_process started"
}

stop_proc() {
  if [ -f "$PIDFILE" ]; then
    pid="$(cat "$PIDFILE" 2>/dev/null || true)"
    if [ -n "$pid" ]; then
      kill "$pid" 2>/dev/null || true
    fi
    rm -f "$PIDFILE"
  fi
  echo "manage_my_process stopped"
}

silent_stop() {
  if [ -f "$PIDFILE" ]; then
    pid="$(cat "$PIDFILE" 2>/dev/null || true)"
    if [ -n "$pid" ]; then
      kill "$pid" 2>/dev/null || true
    fi
    rm -f "$PIDFILE"
  fi
}

silent_start() {
  preflight_root
  "$DAEMON" >/dev/null 2>&1 &
  echo "$!" > "$PIDFILE"
}

case "${1:-}" in
  start)
    start_proc
    ;;
  stop)
    stop_proc
    ;;
  restart)
    silent_stop
    silent_start
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
