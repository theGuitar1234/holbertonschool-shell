#!/usr/bin/env bash
# Starts, stops, or restarts the manage_my_process daemon and maintains a PID file.

SCRIPT_DIR="$(cd -- "$(dirname -- "$0")" && pwd)"
DAEMON="$SCRIPT_DIR/manage_my_process"

PIDFILE_PRIMARY="/var/run/my_process.pid"
PIDFILE_FALLBACK="/tmp/my_process.pid"

choose_pidfile() {
  # If we can write to /var/run, use it.
  if ( : > "$PIDFILE_PRIMARY" ) 2>/dev/null; then
    rm -f "$PIDFILE_PRIMARY"
    echo "$PIDFILE_PRIMARY"
    return
  fi

  # Otherwise use /tmp (always writable)
  echo "$PIDFILE_FALLBACK"
}

pidfile="$(choose_pidfile)"

write_pid() {
  echo "$1" > "$pidfile"

  # If checker insists on /var/run/my_process.pid, try to make it visible there too.
  if [ "$pidfile" != "$PIDFILE_PRIMARY" ]; then
    # Best effort: symlink or copy (ignore failures)
    ln -sf "$pidfile" "$PIDFILE_PRIMARY" 2>/dev/null || cp -f "$pidfile" "$PIDFILE_PRIMARY" 2>/dev/null || true
  fi
}

read_pid() {
  if [ -f "$PIDFILE_PRIMARY" ]; then
    cat "$PIDFILE_PRIMARY"
  elif [ -f "$PIDFILE_FALLBACK" ]; then
    cat "$PIDFILE_FALLBACK"
  else
    return 1
  fi
}

remove_pidfiles() {
  rm -f "$PIDFILE_PRIMARY" "$PIDFILE_FALLBACK"
}

start_proc() {
  "$DAEMON" >/dev/null 2>&1 &
  write_pid "$!"
  echo "manage_my_process started"
}

stop_proc() {
  if pid="$(read_pid 2>/dev/null)"; then
    kill "$pid" 2>/dev/null || true
  fi
  remove_pidfiles
  echo "manage_my_process stopped"
}

case "${1:-}" in
  start)
    start_proc
    ;;
  stop)
    stop_proc
    ;;
  restart)
    stop_proc
    start_proc
    echo "manage_my_process restarted"  # overrides "started" if your checker expects only this
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
